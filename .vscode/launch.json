{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug STM32F103C8 (ST-Link)",
            "type": "cortex-debug",
            "request": "launch",

            "servertype": "openocd",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/bootloader.elf",

            "device": "STM32F103C8",
            "interface": "swd",
            "svdFile": "${workspaceFolder}/stm32.svd",
            "runToEntryPoint": "Reset_Handler",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f1x.cfg"
            ],

            "showDevDebugOutput": "none",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                { "text": "set output-radix 16" }
            ]
        }
    ]
}
